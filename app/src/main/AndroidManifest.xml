<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".BookReadTracker"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookReadTracker"
        tools:targetApi="31">
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.home.MainActivity"/>
        <activity
            android:name=".ui.add.AddBookActivity"
            android:exported="false"
            android:theme="@style/Theme.BookReadTracker.NoActionBar" />
        <activity
            android:name=".ui.list.ListBookActivity"
            android:exported="false"
            android:theme="@style/Theme.BookReadTracker.NoActionBar" />
        <activity
            android:name=".ui.status.StatusBookActivity"
            android:exported="false"
            android:theme="@style/Theme.BookReadTracker.NoActionBar" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:exported="false"
            android:theme="@style/Theme.BookReadTracker.NoActionBar" />
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".notification.DailyReminder"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>