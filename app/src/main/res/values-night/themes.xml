<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookReadTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/yellow500</item>
        <item name="colorSecondaryVariant">@color/yellow700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and Surface colors. -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/charcoal_700</item>
        <item name="colorOnSurface">@color/gray_200</item>

        <!-- Error color. -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="customTabLayoutBackgroundColor">@color/black</item>
        <item name="customTabLayoutFontColorSelected">@color/blue500</item>
        <item name="customTabLayoutFontColorNotSelected">@color/gray_300</item>
        <item name="customDividerColorForTabLayout">@color/gray_100</item>
    </style>

    <style name="Theme.BookReadTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookReadTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookReadTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BookReadTracker" parent="Base.Theme.BookReadTracker" />
</resources>